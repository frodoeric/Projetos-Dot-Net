<Window x:Class="TaskCancellationDemo.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow"
		Height="191"
		Width="524">
	<Grid>
		<Button Content="Start"
				Name="StartButton"
				HorizontalAlignment="Left"
				Margin="38,30,0,0"
				VerticalAlignment="Top"
				Width="75"
				Click="StartButton_Click" />
		<Button Content="Cancel"
				Name="CancelButton"
				HorizontalAlignment="Left"
				Margin="132,30,0,0"
				VerticalAlignment="Top"
				Width="75"
				Click="CancelButton_Click" />
		<ProgressBar x:Name="progressBar"
					 HorizontalAlignment="Left"
					 Height="34"
					 Margin="38,101,0,0"
					 VerticalAlignment="Top"
					 Width="447" />
		<Button Content="Sem Tasks"
				Name="StartSemTaskButton"
				HorizontalAlignment="Left"
				Margin="38,55,0,0"
				VerticalAlignment="Top"
				Width="75"
				Click="StartSemTaskButton_Click" />

	</Grid>
</Window>
